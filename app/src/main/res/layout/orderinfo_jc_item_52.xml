<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/orderinfo_jc_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/jc_bet_lottery_title_height"
        android:orientation="horizontal"
        android:paddingBottom="1dp"
        android:visibility="visible" >

        <TextView
            style="@style/orderinfo_jc_title_text"
            android:layout_width="@dimen/jc_bet_lottery_item_cc_width"
            android:layout_height="fill_parent"
            android:text="场次" />

        <TextView
            style="@style/orderinfo_jc_title_text"
            android:layout_width="@dimen/jc_bet_lottery_item_vs_width"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:text="主队vs客队" />

        <TextView
            style="@style/orderinfo_jc_title_text"
            android:layout_width="@dimen/jc_bet_lottery_item_play_width"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:text="玩法" />

        <TextView
            style="@style/orderinfo_jc_title_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="3"
            android:text="投注" />

        <TextView
            style="@style/orderinfo_jc_title_text"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:text="彩果" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_time"
            style="@style/orderinfo_jc_text"
            android:layout_width="@dimen/jc_bet_lottery_item_cc_width"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="周二  015" />

        <TextView
            android:id="@+id/tv_team"
            style="@style/orderinfo_jc_text"
            android:layout_width="@dimen/jc_bet_lottery_item_vs_width"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:gravity="center"
            android:text="主队vs客队" />

        <com.sm.sls_app.view.MyListView2
            android:id="@+id/orderinfo_jc_listview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:cacheColorHint="#dddddd"
            android:divider="@android:color/transparent"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:listSelector="#00000000"
            android:scrollbars="none"
            android:scrollingCache="false" />
    </LinearLayout>

</LinearLayout>