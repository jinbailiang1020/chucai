            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/top_tv_join"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/normal_btn_change"
            android:text="发起合买"
            android:textColor="@color/yellow"
            android:textSize="14sp"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bet_rl_select"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/bet_ll_top"
        android:background="#c0bebe"
        android:gravity="center_vertical"
        android:weightSum="2" >

        <Button
            android:id="@+id/bet_rl_select_shou"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/pass_type"
            android:text="+增加手选一注"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/bet_rl_select_ji"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/pass_type"
            android:gravity="center"
            android:text="+增加机选一注"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>

