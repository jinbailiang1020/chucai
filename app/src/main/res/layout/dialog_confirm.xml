<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bg_dialog" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="温馨提示"
            android:textColor="@color/main_red"
            android:textSize="@dimen/common_max_text_size"
            android:textStyle="bold" />

        <View
            android:id="@+id/dl_line"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/common_line_height"
            android:layout_below="@+id/tv_title"
            android:background="@color/main_red" />

        <TextView
            android:id="@+id/dl_tv_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dl_line"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/common_lager_text_size" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dl_tv_content"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/dl_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" 
                android:padding="10dp"
                android:text="取消"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/dialog_bg"
                android:textSize="@dimen/common_lager_text_size"
                />
             <Button
                android:id="@+id/dl_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" 
                android:padding="10dp"
                android:text="确定"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/bet_btn_text"
                android:textSize="@dimen/common_lager_text_size"
                />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>