<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_back_change"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/type_items_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo_ssq" />

    <ImageView
        android:id="@+id/img_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:background="@drawable/arrows" />

    <RelativeLayout
        android:id="@+id/type_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/type_items_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lottery_tv_lotteryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:text="双色球"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/img_x"
        android:layout_marginRight="2dp"
         >
    <TextView
            android:id="@+id/lottery_tv_wintime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:textSize="10dp"
            android:text="今晚21:30开奖"
            android:textColor="@color/black"
             />

    <com.sm.sls_app.view.CustomDigitalClock
                android:id="@+id/lottery_tv_lotteryEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lottery_tv_wintime"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/brown"
                android:textSize="10sp" />
    <TextView
            android:id="@+id/lottery_tv_zqlq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lottery_tv_lotteryEnd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="6dp"
            android:textSize="10dp"
            android:text="今晚21:30开奖"
            android:textColor="@color/black"
            android:visibility="gone"
             />
    </RelativeLayout>
 
</RelativeLayout>