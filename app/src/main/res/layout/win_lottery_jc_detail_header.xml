<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/win_lottery_cj_detail_title_height"
    android:background="@drawable/select_jc_lv_parent_up"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/common_margin_8" >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_weight="1"
        android:text="2014-12-12"
        android:textColor="@color/black"
        android:textSize="@dimen/common_big_text_size" />

    <TextView
        android:id="@+id/tv_weekday"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text="周五"
        android:textColor="@color/black"
        android:textSize="@dimen/common_big_text_size" />

</LinearLayout>