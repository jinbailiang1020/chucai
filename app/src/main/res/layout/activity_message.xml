<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout
        android:id="@+id/infomation_title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/main_top"
         >
        <TextView 
            android:id="@+id/infomation_title_name"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:textSize="22sp"
        	android:textColor="@color/white"
        	android:gravity="center"
        	android:text="消息中心"
            />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/infomation_top"
        android:layout_width="fill_parent"
        android:weightSum="2"
        android:layout_height="35dp"
         >
      
        <Button 
             android:id="@+id/infomation_top_one"
        	 android:layout_width="0dp"
        	 android:layout_weight="1"
        	 android:layout_height="30dp"
        	 android:gravity="center"
        	 android:background="@drawable/btn_information_change"
        	 android:text="系统消息"
            />
        
        <Button 
             android:id="@+id/infomation_top_two"
        	 android:layout_width="0dp"
        	 android:layout_weight="1"
        	 android:layout_height="30dp"
        	 android:gravity="center"
        	 android:background="@drawable/btn_information_change"
        	 android:text="个人消息"
            />
        </LinearLayout>
        <com.sm.sls_app.view.MyListView
            android:id="@+id/info_listView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="#DDDCDC"
	        android:dividerHeight="0.5dp"
	        android:cacheColorHint="#DDDCDC"
	        android:fastScrollEnabled="true"
	        android:fadeScrollbars="true" 
	        android:scrollingCache="false"
	        android:fadingEdge="none"
	        android:layout_margin="5dp"
            />
            

</LinearLayout>