<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_red"
            android:text="账户信息"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lager_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/my_infromation_height"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginRight="@dimen/common_margin_8"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_8"
            android:text="真实姓名"
            android:textColor="#848484"
            android:textSize="@dimen/common_big_text_size" />

        <EditText
            android:id="@+id/idcard_et_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="请填写您的真实姓名"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="#c7c7c7"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/my_center_bg2" />

    <Button
        android:id="@+id/idcard_btn_improve"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginRight="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_16"
        android:background="@drawable/btn_main"
        android:gravity="center"
        android:text="确  认"
        android:textColor="@color/white"
        android:textSize="@dimen/common_lage_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin_8"
        android:layout_marginTop="@dimen/common_margin_16"
        android:text="提示：请认真填写此内容，提交成功后，将不可更改"
        android:textColor="#ff231e"
        android:textSize="@dimen/common_small_text_size" />

</LinearLayout>