<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_center_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top_select"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/main_red"
            android:text="我的账户"
            android:textColor="@color/white"
            android:textSize="@dimen/common_lager_text_size" />

        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/common_toplayout_height"
            android:layout_height="@dimen/common_toplayout_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/my_center_setting" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/my_center_account_layout_height"
        android:background="@drawable/my_center_account_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_16"
                android:layout_marginRight="@dimen/common_margin_16"
                android:layout_marginTop="@dimen/common_margin_16"
                android:src="@drawable/my_center_account" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/center_tv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_16"
                android:text="123456"
                android:textColor="@color/black"
                android:textSize="@dimen/common_lage_text_size" />

            <TextView
                android:id="@+id/tv_freeze"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_8"
                android:text="可用金额"
                android:textColor="@color/black"
                android:textSize="@dimen/common_big_text_size" />

            <TextView
                android:id="@+id/tv_freeze2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_8"
                android:text="冻结金额"
                android:textColor="@color/black"
                android:textSize="@dimen/common_big_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_draw_money"
                android:layout_width="@dimen/my_center_money_btn_width"
                android:layout_height="@dimen/my_center_money_btn_height"
                android:layout_marginRight="@dimen/common_margin_16"
                android:layout_marginTop="@dimen/common_margin_24"
                android:background="@drawable/login_regist_btn"
                android:text="我要提现"
                android:textColor="@color/login_regist_btn_text"
                android:textSize="@dimen/common_small_text_size" />
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_16"
                android:text="ID"
                android:textColor="#e3393c"
                android:textSize="@dimen/common_big_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_8"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_all"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_account" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="全部彩票"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_lottery"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_win" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中奖纪录"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_in_lottery"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_no_win" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="未开奖"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_follow"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_follow" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="代购订单"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_chipped"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_chipped" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="合买彩票"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/my_center_bg2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_8"
        android:background="@color/white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_userInfo"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_account_information" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账户信息"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_detail"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_account_detail" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="账户明细"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:background="@color/my_center_bg2" />

        <LinearLayout
            android:id="@+id/btn_integral"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/my_center_layout_height"
            android:layout_marginLeft="@dimen/common_margin_16"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/integral" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="积分中心"
                android:textColor="@color/my_center_layout_text"
                android:textSize="@dimen/common_lage_text_size" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/common_margin_16"
                android:src="@drawable/my_center_right_arrow" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/my_center_bg2" />
    </LinearLayout>

</LinearLayout>