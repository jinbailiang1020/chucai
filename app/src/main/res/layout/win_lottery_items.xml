        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/common_margin_16"
        android:layout_marginLeft="@dimen/common_margin_16"
        android:layout_marginTop="@dimen/common_margin_16"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lottery_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/win_tv_lotteryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="双色球"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/win_tv_lotteryQi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_16"
                android:text="454543期"
                android:textColor="#848484"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/win_tv_lottery_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin_8"
                android:text="2014-12-09"
                android:textColor="#848484"
                android:textSize="12sp"
                android:visibility="gone" />
