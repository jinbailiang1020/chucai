<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top_select"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_toplayout_height"
        android:background="@color/main_red" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="@dimen/common_btn_back_size"
            android:layout_height="@dimen/common_btn_back_size"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back" />

        <LinearLayout
            android:id="@+id/layout_select_playtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <Button
                android:id="@+id/btn_playtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/main_red"
                android:padding="5dp"
                android:text="合买帮助"
                android:textColor="@color/white"
                android:textSize="@dimen/common_lager_text_size" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_title1"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="1.什么叫合买？"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="由多人共同出资购买彩票，按照出资比例分享奖金的投注方式。可以在减少风险的前提下增加购买彩票的金额，增加了中奖的机率。"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_title2"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="2.合买中奖后，奖金如何分配？"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="合买方案中奖后，税后奖金(将扣掉发起人提出佣金)将按照发起人和跟单人的出资比例进行分配，奖金直接返还到中奖用户的帐户中。"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="3.如何参与合买？"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="在合买方案列表中选择您要跟单的方案，进入该方案详细内容页面，查看方案，并输入您要认购的份数，点击购买。支付成功后，合买跟单即认购成功。"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="4.什么是战绩？"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="战绩是根据发起人的中奖盈利情况，向用户授予 太阳 ，月亮，星星  三个等级图标。战绩图标越多，实力越强。您可以根据发起人战绩选择进行跟单，共同搏击大奖。"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>