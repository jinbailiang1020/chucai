<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/spf_ll"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.25"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/spf_tv_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:text="001"
            android:textColor="@color/select_pop_lv_tv"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/spf_tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="东南亚"
            android:textColor="@color/select_pop_lv_tv"
            android:textSize="@dimen/common_big_text_size" />

        <TextView
            android:id="@+id/spf_tv_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="23:14"
            android:textColor="@color/select_pop_lv_tv"
            android:textSize="@dimen/common_big_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spf_ll222"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/spf_right_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/right_top_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:weightSum="0.9" >

                <TextView
                    android:id="@+id/ll_tv_mainTeam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="新加坡"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_lage_text_size" />

                <TextView
                    android:id="@+id/ll_tv_vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:text="VS"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_lage_text_size" />

                <TextView
                    android:id="@+id/ll_tv_cusTeam"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:text="泰国"
                    android:textColor="@color/black"
                    android:textSize="@dimen/common_lage_text_size" />
            </LinearLayout>

            <!-- 胜平负 按钮点击区 -->

            <LinearLayout
                android:id="@+id/right_bottom_ll_sf"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/select_jclq_layout_height"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_mainWin"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/select_sfc_lv_item_left"
                    android:gravity="center"
                    android:text="主胜"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_small_text_size" />

                <Button
                    android:id="@+id/btn_lose"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/select_sfc_lv_item_right"
                    android:gravity="center"
                    android:text="主负"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/common_small_text_size" />
            </LinearLayout>

            <!-- 大小分 按钮点击区 -->

            <LinearLayout
                android:id="@+id/right_bottom_ll_dxf"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/select_jclq_layout_height"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_big"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/select_sfc_lv_item_left"
                    android:gravity="center"
                    android:text="大分"
                    android:textColor="@color/select_jclq_btn_text"
                    android:textSize="@dimen/common_small_text_size" />

                <Button
                    android:id="@+id/btn_small"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.45"
                    android:background="@drawable/select_sfc_lv_item_right"
                    android:gravity="center"
                    android:text="小分"
                    android:textColor="@color/select_jclq_btn_text"
                    android:textSize="@dimen/common_small_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_bottom_ll_sfc"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/select_jclq_layout_height"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1" >

                <Button
                    android:id="@+id/btn_open"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/select_jc_bg_white"
                    android:gravity="center"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="点击展开投注区"
                    android:textColor="@color/select_jclq_btn_text"
                    android:textSize="@dimen/common_small_text_size" />
            </LinearLayout>
            <!-- ######### ############混合投注############################################ -->

            <LinearLayout
                android:id="@+id/ll_hhtz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="16" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="13"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="13" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="@dimen/select_jclq_layout_height_hunhe"
                            android:layout_weight="1"
                            android:background="#F9E2BF"
                            android:gravity="center"
                            android:text="让\n分"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/common_min_text_size" />

                        <LinearLayout
                            android:id="@+id/ll_stop"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="12"
                            android:background="@drawable/select_jczq_tv_bolder_white"
                            android:weightSum="12" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="停止销售"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/common_min_text_size" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/select_jclq_layout_height_hunhe"
                            android:layout_weight="12"
                            android:weightSum="12" >

                            <Button
                                android:id="@+id/rf_mainwin"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:gravity="center"
                                android:text="主胜1.75"
                                android:textColor="#909090"
                                android:textSize="@dimen/common_min_text_size" />

                            <TextView
                                android:id="@+id/tv_rangfen"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:text="主－1.75"
                                android:textColor="#909090"
                                android:textSize="@dimen/common_small_text_size" />

                            <Button
                                android:id="@+id/rf_mainlos"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:gravity="center"
                                android:text="主负3.21"
                                android:textColor="#909090"
                                android:textSize="@dimen/common_min_text_size" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/select_jclq_layout_height_hunhe"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="13" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:background="#C7E4CA"
                            android:gravity="center"
                            android:text="大\n小\n分"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/common_min_text_size" />

                        <LinearLayout
                            android:id="@+id/ll_dx_stop"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="12"
                            android:background="@drawable/select_sfc_lv_item_right"
                            android:visibility="gone"
                            android:weightSum="12" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:gravity="center"
                                android:text="停止销售"
                                android:textColor="@color/gray"
                                android:textSize="12px" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/select_jclq_layout_height_hunhe"
                            android:layout_weight="12"
                            android:weightSum="12" >

                            <Button
                                android:id="@+id/dx_bigscore"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:text="大分1.76"
                                android:textColor="@color/select_pop_lv_tv"
                                android:textSize="@dimen/common_min_text_size" />

                            <TextView
                                android:id="@+id/tv_daxiao_score"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:gravity="center"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:text="175.5"
                                android:textColor="@color/select_pop_lv_tv"
                                android:textSize="@dimen/common_small_text_size" />

                            <Button
                                android:id="@+id/dx_smallscore"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="4"
                                android:background="@drawable/select_jczq_tv_bolder_white"
                                android:gravity="center"
                                android:text="主负1.32"
                                android:textColor="@color/select_pop_lv_tv"
                                android:textSize="@dimen/common_min_text_size" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_expansion"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="3"
                    android:background="@drawable/select_jczq_tv_bolder_white"
                    android:gravity="center"
                    android:text="展开\n全部"
                    android:textColor="#909090"
                    android:textSize="@dimen/common_small_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>