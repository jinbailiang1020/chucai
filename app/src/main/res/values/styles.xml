<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:layout_marginTop">2dp</item> -->
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="dialog_screen" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:minWidth">1280dp</item>
    </style>
    <!-- 自定义dialog的样式 -->
    <style name="dialog2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@null</item>
    </style>

    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiIconPageIndicatorStyle">@style/IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomTabPageIndicator.Text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/vpi_text_selector</item>
    </style>

    <style name="IconPageIndicator"></style>

    <style name="StyledIndicators_red" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator_red</item>
    </style>

    <style name="CustomTabPageIndicator_red">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_tab_indicator_red</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator_red.text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomTabPageIndicator_red.text">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/vpi_text_selector_red</item>
    </style>

    <style name="win_lottery_detail_text_title_style">
        <item name="android:background">#fefef2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#848484</item>
    </style>

    <style name="win_lottery_detail_text_title1_style">
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_small_text_size</item>
        <item name="android:textColor">#848484</item>
    </style>

    <style name="win_lottery_detail_text_content_style">
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="win_lottery_detail_text_content1_style">
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#e3393c</item>
    </style>

    <style name="orderinfo_jc_title_text">
        <item name="android:background">#fefef2</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#848484</item>
    </style>

    <style name="orderinfo_jc_text">
        <item name="android:background">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="pull_to_refresh_text">
        <item name="android:textSize">@dimen/common_big_text_size</item>
        <item name="android:textColor">#848484</item>
    </style>

    <style name="pull_to_refresh_text_time">
        <item name="android:textSize">@dimen/common_small_text_size</item>
        <item name="android:textColor">#848484</item>
    </style>

</resources>